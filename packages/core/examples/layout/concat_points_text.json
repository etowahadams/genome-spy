{
  "$schema": "https://unpkg.com/@genome-spy/core/dist/schema.json",

  "resolve": {
    "scale": { "y": "independent", "x": "shared" },
    "axis": { "x": "shared" }
  },
  "vconcat": [
    {
      "height": 200,
      "view": { "stroke": "lightgray" },
      "name": "Points",
      "params": [
        {
          "name": "pointSelection",
          "select": {
            "type": "point",
            "on": "pointerover"
          }
        }
      ],
      "data": {
        "sequence": { "start": 0, "stop": 200000, "as": "x" }
      },
      "transform": [
        { "type": "formula", "expr": "random() * 0.682", "as": "u" },
        {
          "type": "formula",
          "expr": "((datum.u % 1e-8 > 5e-9 ? 1 : -1) * (sqrt(-log(max(1e-9, datum.u))) - 0.618)) * 1.618 + sin(datum.x / 10000)",
          "as": "y"
        }
      ],
      "mark": "point",
      "encoding": {
        "x": {
          "field": "x",
          "type": "quantitative",
          "scale": { "zoom": true },
          "axis": { "grid": true, "gridDash": [2, 4] }
        },
        "y": {
          "field": "y",
          "type": "quantitative",
          "title": "The magnificent y axis!"
        },
        "size": {
          "value": { "expr": "400 * pow(min(1, zoomLevel / 25), 1.8)" },
          "condition": {
            "param": "pointSelection",
            "empty": false,
            "value": {
              "expr": "clamp(1600 * pow(min(1, zoomLevel / 25), 1.8), 100, 1600)"
            }
          }
        },
        "opacity": {
          "value": 0.6,
          "condition": {
            "param": "pointSelection",
            "empty": false,
            "value": 1
          }
        }
      }
    },
    {
      "view": { "stroke": "lightgray" },
      "name": "Text",
      "params": [
        {
          "name": "textSelection",
          "select": {
            "type": "point",
            "on": "pointerover"
          }
        }
      ],
      "data": {
        "sequence": { "start": 0, "stop": 300 }
      },
      "transform": [
        {
          "type": "formula",
          "expr": "floor(random() * 200000)",
          "as": "x"
        },
        {
          "type": "formula",
          "expr": "floor(random() * 1000)",
          "as": "y"
        },
        {
          "type": "formula",
          "expr": "'' + datum.x + 'x' + datum.y",
          "as": "text"
        },
        {
          "type": "formula",
          "expr": "pow(40, random())",
          "as": "size"
        }
      ],
      "encoding": {
        "x": {
          "field": "x",
          "type": "quantitative",
          "buildIndex": false
        },
        "y": {
          "field": "y",
          "type": "quantitative"
        },
        "text": {
          "field": "text"
        },
        "size": {
          "field": "size",
          "type": "quantitative",
          "scale": {
            "range": [5, 200]
          }
        },
        "opacity": {
          "field": "size",
          "type": "quantitative",
          "scale": {
            "range": [1, 0]
          },
          "condition": {
            "param": "textSelection",
            "value": 1,
            "empty": false
          }
        },
        "angle": {
          "field": "x",
          "type": "quantitative"
        },
        "color": {
          "value": "black",
          "condition": {
            "param": "textSelection",
            "value": "#ff4433",
            "empty": false
          }
        }
      },

      "mark": {
        "type": "text",
        "align": "center",
        "baseline": "middle"
      }
    }
  ]
}
